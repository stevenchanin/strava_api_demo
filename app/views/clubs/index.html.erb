<fieldset>
  <h2>Search for clubs with names like:</h2>
  <% form_for :club do |f| %>
    <%= f.text_field :name %>
    <%= f.submit 'Search' %>
  <% end %>
</fieldset>
<h1>Matching Clubs</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Id</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= club.id %></td>
        <td>
          <%= link_to 'Show', club_url(:id => club.id) %>
          <%= link_to 'Members', members_club_url(:id => club.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>